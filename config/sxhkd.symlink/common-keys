    vivaldi-stable

#Hide polybar
super + shift + Delete
    polybar-msg cmd toggle

#########################
# SUPER + SHIFT KEYS    #
#########################

#Terminal emulator
super + shift + Return
	 st -e "zsh -ic tmux"

#DMENU
super + shift + d
	 dmenu-wal

#Root Ranger
super + shift + r
  termite -e "sudo ranger"

#irssi
super + shift + i
  termite -e "zsh -ic tmux -c irssi"

#Xkill
super + shift + q
  xkill

#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd

