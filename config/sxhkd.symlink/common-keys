#########################
# ALT + ... KEYS        #
#########################


#Wallpaper trash
alt + t
    variety -t

#Wallpaper next
alt + n
    variety -n && nitrogen-variety

#Wallpaper previous
alt + p
    variety -p && nitrogen-variety

#Wallpaper favorite
alt + f
    variety -f

#Wallpaper previous
alt + Left
    variety -p && nitrogen-variety

#Wallpaper next
alt + Right
    variety -n && nitrogen-variety

#Wallpaper pause
alt + Up
    variety --pause

#Wallpaper resume
alt + Down
    variety --resume

 #Show hidden windows
 alt + i
     hidden -c|xargs dmenu-wal

#Gmrun
alt + F2
    gmrun

#Xfce4-appfinder
alt + F3
    xfce4-appfinder

#Search with Surfraw
alt + shift + s
	$HOME/.bin/rofi-scripts/surfraw_search.sh

#Search with Surfraw open in Vivaldi
alt + shift + v
    $HOME/.bin/rofi-scripts/surfraw_vivaldi_search.sh

#Cht.sh
alt + shift + c
    $HOME/.bin/rofi-scripts/rofi-cht.sh

#Mouse rectangle resize
alt + !button3
    wmctrl -r :ACTIVE: -e "$(slop -f 0,%x,%y,%w,%h)"

#########################
#VARIETY KEYS WITH PYWAL#
#########################

#Wallpaper trash
alt + shift + t
    variety -t && wal -i $(cat $HOME/.config/variety/wallpaper/wallpaper.jpg.txt) -g &

#Wallpaper next
alt + shift + n
    variety -n && wal -i $(cat $HOME/.config/variety/wallpaper/wallpaper.jpg.txt) -g &

#Wallpaper previous
alt + shift + p
    variety -p && wal -i $(cat $HOME/.config/variety/wallpaper/wallpaper.jpg.txt) -g &

#Wallpaper favorite
alt + shift + f
    variety -f && wal -i $(cat $HOME/.config/variety/wallpaper/wallpaper.jpg.txt) -g &

#Wallpaper update
alt + shift + u
    wal -i $(cat $HOME/.config/variety/wallpaper/wallpaper.jpg.txt) -g &

#Wal Reload
alt + w
	wal -R

