shadow = true;
no-dnd-shadow = true;
no-dock-shadow = true;
clear-shadow = true;
shadow-radius = 10;
shadow-offset-x = -7;
shadow-offset-y = -7;
shadow-opacity = 1;
shadow-red = 0.0;
shadow-green = 0.0;
shadow-blue = 0.0;
shadow-exclude = [ "name = 'Notification'", "class_g = 'Conky'", "class_g ?= 'Notify-osd'", "class_g = 'Cairo-clock'", "class_g = 'Bspwm'" ];
shadow-ignore-shaped = true;
menu-opacity = 0.8;
inactive-opacity = 0.8;
active-opacity = 1.00;
frame-opacity = 0.9;
inactive-opacity-override = false;
alpha-step = 0.06;
inactive-dim = 0.2;
blur-kern = "3x3box";
blur-background-exclude = [ "window_type = 'dock'", "window_type = 'desktop'" ];
fading = true;
fade-in-step = 0.1;
fade-out-step = 0.1;
fade-exclude = [ "name = 'i3lock'" ];
backend = "xrender";
mark-wmwin-focused = true;
mark-ovredir-focused = true;
use-ewmh-active-win = true;
detect-rounded-corners = true;
detect-client-opacity = true;
refresh-rate = 0;
vsync = "none";
dbe = true;
paint-on-overlay = true;
focus-exclude = [ "class_g = 'Cairo-clock'" ];
detect-transient = false;
detect-client-leader = false;
invert-color-include = [ ];
glx-copy-from-front = true;
glx-swap-method = "undefined";
xrender-sync = true;
xrender-sync-fence = true;
wintypes : 
{
  tooltip : 
  {
    fade = true;
    shadow = false;
    opacity = 0.75;
    focus = true;
  };
};
inactive-dim-fixed = true;
blur-background = false;
fade-delta = 15;
opacity-rule = [ "10:class_g = 'Bspwm' && class_i = 'presel_feedback'", "85:class_i = 'roxterm'", "85:class_i = 'urxvt'"]

